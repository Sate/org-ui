{
  "name": "org-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "material-ui": "^1.0.0-beta.17",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.13",
    "@storybook/addon-links": "^3.2.13",
    "@storybook/react": "^3.2.13",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.7.4",
    "react-scripts": "1.0.14"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "CI=true react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "prepush": "npm run test:ci",
    "precommit": "lint-staged",
    "prettier": "prettier --write {src,public}/**/*.{js,scss}",
    "storybook-web": "start-storybook -p 9009 -s public",
    "storybook": "npm-run-all -p watch-css storybook-web",
    "build-storybook": "npm run build-css && build-storybook -s public"
  },
  "lint-staged": {
    "{src,public}/**/*.{js,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}
